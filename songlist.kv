
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.4
        Label:
            text: "Sort by:"
        Spinner:
            id: sort_spinner
            values: ["title", "artist", "year"]
            on_text: app.sort_songs(self.text)
        Label:
            text: "Add New Song"
        TextInput:
            id: title_input
            hint_text: "Title"
            multiline: False
            focus_next: artist_input
        TextInput:
            id: artist_input
            hint_text: "Artist"
            multiline: False
            focus_next: year_input
        TextInput:
            id: year_input
            hint_text: "Year"
            multiline: False
        Button:
            text: "Add Song"
            on_press: app.add_song()
        Button:
            text: "Clear"
            on_press: app.clear_inputs()
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        Label:
            text: app.status_top
            size_hint_y: 0.1
        ScrollView:
            BoxLayout:
                id: song_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Label:
            text: app.status_bottom
            size_hint_y: 0.1